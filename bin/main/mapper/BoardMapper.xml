	<select id="selectBoardDetail" resultMap="BoardMap">
		SELECT			ta.*,
						tc.c_id,
						tc.u_id,
						tc.c_content
		FROM			boardlist ta
		LEFT join 		commentlist tc
		ON				ta.b_id = tc.b_id
		Where			ta.b_id = #{bId}
	</select>
	
	
	
	
	<select id="deleteBoard" resultType="Board" parameterType="int">
		DELETE			
		FROM				boardlist
		WHERE			b_id = #{bId}
	</select>
	
	<insert id="writeBoard" parameterType="Board">
		INSERT INTO boardlist (
			b_title,
			b_content,
			u_id,
			b_group,
     		b_order,
     		b_depth
		) VALUES (
			#{bTitle},
			#{bContent},
			#{username},
			#{bGroup},
			#{bOrder},
			#{bDepth}
		)
	</insert>
	
	 <update id="modifyBoard" parameterType="Board">
        update boardlist 
        set  b_title = #{bTitle},
            b_content = #{bContent}
       where b_id = #{bId}
    </update>
    
    
    <select id="getBoards" resultType="int">
	 	Select 	COUNT(*) count 
	 	FROM boardlist
	 	<where>
			<if test="searchType != null">
				<choose>
		   			<when test="searchType == 'bTitle'">
		   				b_title like CONCAT('%', #{keyword}, '%')
		   			</when>
		   			<when test="searchType == 'username'">
		   				u_id like CONCAT('%', #{keyword}, '%')
		   			</when>
		   		</choose>	
			</if>
		</where>
    </select>
    
    <insert id="writeComment">
	      Insert into
	      commentlist(
	     		 c_content
	     		 ,b_id
	     		 ,u_id)
	      values(
	      		#{c_content}
	            ,#{bId}
	            ,#{username}
	      		)
   </insert>
   
